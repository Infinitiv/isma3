<section class="panel">
  <% if @moderator_permission || current_user == @article.user || @article.published %>
    <%= render partial: 'article', locals: { article: @article, dimension: '150x150' } %>
  <% else %>
    <h1>Статья еще не опубликована или снята с публикации</h1>
  <% end %>
</section>
<%  if @writer_permission %>
<%= form_for(@attachment) do |f| %>
  <div style="display: none;">
    <%= text_field_tag :article_id, @article.id %>
  </div>  
  <div class="filefild">
    <%= f.file_field :file %>
  </div>
  <div class="actions">
    <%= f.submit 'Прикрепить файл' %>
  </div>
<% end %>
<% end %>
