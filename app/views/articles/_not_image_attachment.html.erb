<li class='pdf-thumb'>
<div class="wrap">
  <% if @moderator_permission || current_user == @article.user %>
    <%= link_to not_image_attachment, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <i class="fi-x"></i>
    <% end %>
  <% end %>
</div>
<%= link_to attachment_path(not_image_attachment), target: '_blank' do %>
  <p>
  <% case %>
  <% when not_image_attachment.mime_type =~ /pdf/ %>
  <%= image_tag("application-pdf.png", size: '32x32', class: "pull-left") %>
  <% when not_image_attachment.mime_type =~ /word/ %>
  <%= image_tag("application-msword.png", size: '32x32', class: "pull-left") %>
  <% when not_image_attachment.mime_type =~ /ms-excel|spreadsheet/ %>
  <%= image_tag("application-msexcel.png", size: '32x32', class: "pull-left") %>
  <% else %>
  <%= image_tag("unknown.png", size: '32x32', class: "pull-left") %>
  <% end %>
  <%= not_image_attachment.title_sen_dot %>
  </p>
<% end %>
</li>