<div class="row">
  <div class="<%= @articles['announcements'] ? 'large-8 columns' : 'small-12 large-12 columns' %>">
    <%= render partial: 'block', locals: {title: 'Новости', articles: @articles['news'] } unless @articles['news'].empty? %>
    <%= render partial: 'block', locals: {title: 'Статьи', articles: @articles['articles'] } unless @articles['articles'].empty? %>
  </div>
  <div class="<%= (@articles['news'] || @articles['articles']) ? 'large-4 columns' : 'small-12 large-12 columns' %>">
    <%= render partial: 'block', locals: {title: 'Анонсы', articles: @articles['announcements'] } unless @articles['announcements'].empty? %>
  </div>
</div>
