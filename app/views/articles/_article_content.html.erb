<%= render partial: 'articles/first_image_attachment', locals: {article: article, image_attachment: article.first_image_attachment, dimension: dimension } if article.first_image_attachment %>
<% if composition[:truncate] %>
  <div class="text-justify clearfix">
  <p>
  <%= article.content.length > 800 ? sanitize_truncate(markdown(autosub_details article.content)) : sanitize_full(markdown(autosub_details article.content)) %>
  </div>
<% else %>
  <div class="text-justify clearfix">
  <%= sanitize_full markdown(autosub_details article.content) %>
  </div>
<% end %>
