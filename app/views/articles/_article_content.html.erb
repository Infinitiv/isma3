<% if controller.action_name == 'index' %>
    <%= truncate(markdown(article.content), length: 50, separator: ' ') { link_to "Continue", "#" } %>
<% else %>
  <%= render partial: 'first_image_attachment', locals: {image_attachment: @first_image_attachment } if @first_image_attachment %>
  <div id="article_content" data-mercury="full">
  <%= markdown(article.content) %>
  </div>
<% end %>