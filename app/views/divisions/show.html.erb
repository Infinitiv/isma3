<div class="row panel">
  <div class="small-8 large-8 columns">
    <header>
      <h1><%= @division.name %></h1>
    </header>
    <%= link_to 'Добавить должность', new_division_post_path(@division), class: "button small" if @administrator_permisstion %>
    <dl>
    <dt><%= link_to @head.first.name, division_post_path(@division, @head.first) if @head.first %>
    </dt>
    <dd><%= link_to @head.first.user.profile.full_name_reg, user_profile_path(@head.first.user) if @head.first.user %>
    </dd>
    </dl>
    <% if @posts.count > 1 %>
    <dl class="accordion" data-accordion>
  <dd>
    <a href="#employees">Сотрудники</a>
    <div id="employees" class="content">
      <dl>
      <% @employees.each do |employee| %>
	<dt><%= link_to employee.name, division_post_path(@division, employee) %>
	</dt>
	<dd><%= link_to employee.user.profile.full_name_reg, user_profile_path(employee.user) %>
	</dd>
      <% end %>
      </dl>
    </div>
  </dd>
  </dl>
  <% end %>
  <% if @childs && @childs.count > 0 %>
    <dl class="accordion" data-accordion>
      <dd>
	<a href="#childs">Подразделения</a>
	<div id="childs" class="content">
	  <ul>
	  <% @childs.each do |child| %>
	    <li><%= link_to child.division.name, child.division %>
	  <% end %>
	  </ul>
	</div>
      </dd>
    </dl>
  <% end %>
    <%= render partial: 'articles/article', collection: @articles %>
  </div>
  
  <div class="small-4 large-4 columns">
    <h2>Контакты</h2>
    <address>Адрес: <%= @division.address %>
    Телефон: <%= number_to_phone(@head.first.phone, country_code: 7) unless @head.first.phone.empty? %>
    <p><%= mail_to @division.email, 'Написать письмо' unless @division.email.empty? %></address>
    <h2>Как добраться</h2>
    <div id="map" style="width: 100%; height: 200px" data-name="<%= @division.name %>" data-address="<%= @division.address %>" data-latitude="<%= @division.latitude %>" data-longitude="<%= @division.longitude %>"></div>
  </div>
</div>
