= form_for @educational_program_number do |f|
  - if @educational_program_number.errors.any?
    ul
      - @educational_program_number.errors.full_messages.each do |msg|
        li= msg
  .field
    = f.label 'За счет федерального бюджета'
    = f.number_field :number_federal
  .field
    = f.label 'Иностранных граждан на бюджете'
    = f.number_field :number_foreign_budget
  .field
    = f.label 'За счет средств физических и (или) юридических лиц'
    = f.number_field :number_personal
  .field
    = f.label 'Иностранных граждан на внебюджете'
    = f.number_field :number_foreign_paid
  .field
    = f.label 'Дата предоставления информации'
    = f.date_field :date, value: Time.now.to_date
  .field
    = f.label 'Образовательная программа'
    = f.select :educational_program_id, option_for_select = @educational_programs.collect {|p| ["#{'*' if p.adaptive}#{p.full_name} (#{p.educational_standart ? p.educational_standart.level : 'нет стандарта'})", p.id]}, {include_blank: ''}
  .actions
    = f.submit 'Добавить', class: 'button tiny'
