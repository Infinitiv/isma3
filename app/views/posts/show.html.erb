<section  class="panel">
<h1><%= "#{@post.division.name} - #{@post.name}" %></h1>
<%= render partial: 'articles/first_image_attachment', locals: {image_attachment: @last_image_attachment } if @last_image_attachment %>
<p><%= link_to @profile.full_name_reg, user_profile_path(@profile.user) if @profile %>
<p><%= @profile.about if @profile %>
<dl>
  <dt>Контакты</dt>
  <dd><p><%= mail_to @division.email, 'Написать письмо', subject: "Для #{@profile.full_name if @profile}" unless @division.email.empty? %></dd>
  <dd><p><%= "Телефон: #{number_to_phone(@post.phone, country_code: 7)}" unless @post.phone.empty? %>
</section>

