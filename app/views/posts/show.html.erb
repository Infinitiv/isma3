<section  class="panel">
<h1><%= "#{@post.division.name} - #{@post.name}" %></h1>
<%= render partial: 'articles/first_image_attachment', locals: {image_attachment: @last_image_attachment } if @last_image_attachment %>
<p><%= link_to @profile.full_name_reg, user_profile_path(@profile.user) if @profile %>
<p><%= @profile.about %>
<dl>
  <dt>Контакты</dt>
  <dd><p><%= mail_to @division.email, 'Написать письмо', subject: "Для #{@profile.full_name}" unless @division.email.empty? %></dd>
  <dd><p>Телефон: <%= number_to_phone(@post.phone, country_code: 7) unless @post.phone.empty? %></dd>
</dl>
<%= link_to 'Edit', edit_division_post_path(@division, @post), class: 'button small' %> |
<%= link_to 'Back', division_posts_path(@division), class: 'button small' %>
</section>

