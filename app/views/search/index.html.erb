<div class="panel">
<p><%= "Вы искали: \"#{params[:search]}\". Найдено совпадений - #{@search.count}" %>
<ol start="<%= (params[:page].to_i - 1) * 30 + 1  if params[:page] %>">
<% @search.each do |search| %>
<li><%= link_to search.title_sen_dot, attachment_path(search), :target => '_black' if search.class == Attachment %>
<%= link_to search.title, article_path(search) if search.class == Article %>
<%= link_to search.profile.full_name, user_profile_path(search) if search.class == User %>
<%= link_to search.profile.full_name, user_profile_path(search) if search.class == Profile %>
<%= link_to search.name, division_path(search) if search.class == Division %>
<% end %>
</ol>
<%= will_paginate @search %>
</div>